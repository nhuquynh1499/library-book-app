extends ../layouts/common.pug

block content
  h1 Transaction list

  table.table
    tr
      th User borrow
      th Book
      th
      th
    each transaction in transactions
      tr
        td= transaction.user
        td= transaction.book
        if (transaction.isComplete == false)
          td 
            a(href="/transactions/" + transaction.id + "/complete") Trả sách nè
        else 
          td Đã trả rồi nhé, bớt đòi
        //td 
          a(href="/transactions/" + transaction "/update") Update

  a(href="/transactions/create") New