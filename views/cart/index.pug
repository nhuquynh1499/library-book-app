extends ../layouts/common.pug

block content
  h1 Cart
  
  table.table
    tr
      th Title
      th Cover
      th Description
      th Delete
    if (session)
      each book in session.cart
        tr
          td= book.title
          td= book.image
          td= book.description
          td 
            a(href="/cart/" + book.id + "/delete") Delete