extends ../layouts/common.pug

block content  
  h1 Update a book

  form(method="POST", action="/books/" + book.id + "/update", enctype="multipart/form-data")
    if (book.cover)
        img(src=book.cover, width='32')
    .form-group
      span Title: 
      span= book.title
    .form-group
      label(for="title") New title: 
      input.form-control(type="text", name="title")
    .form-group
      label(for="description") Description: 
      p= book.description
    .form-group
      label(for='cover') Sá»­a cover
      input#avatar.form-control-file(type='file', name='cover')
    button.btn.btn-primary Update
