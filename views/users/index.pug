extends ../layouts/common.pug

block content
  h1 User list

  table.table
    tr
      th Name
      th Phone
      th Avatar
      th
      th
    each user in users
      tr
        td= user.name
        td= user.phone
        td
          if(!user.avatar)
            img(src="https://loremflickr.com/320/240", width='32')
          else
            img(src=user.avatar, width='32')
        td 
          a(href="/users/" + user.id + "/delete") Delete
        td 
          a(href="/users/" + user.id + "/update") Update

  a.btn.btn-primary(href="/users/create") New